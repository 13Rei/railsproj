<%= stylesheet_link_tag 'logreg', :media => "all" %>

<div class="content">
  <div class="register">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="logo">
              STACK<br><b>UNDERFLOW</b>
          </div>
          <p>Username: </p>
          <p><%= f.text_field :name, autofocus: true, autocomplete: "name" %></p>
          <p>Email:</p>
          <p> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
          <p>Password:
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br /></p>
          <p>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </p>
          <p>Confirm Password:</p>
          <p>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </p>
          <%= f.submit "Sign up" %> 
          <p>Already have an account? <%= render "devise/shared/links"%></p>
    <% end %> 
  </div>
</div>

