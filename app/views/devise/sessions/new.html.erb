<%= stylesheet_link_tag 'logreg', :media => "all" %>

<div class="content">
  <div class="register">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="logo">
            STACK<br><b>UNDERFLOW</b>
        </div>
        <p>Email</p><%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
        <p>Password</p><%= f.password_field :password, autocomplete: "current-password" %><br>
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <%= f.submit "Log in" %> 
        <br>
        <p style="color: red;"><%= render "devise/shared/links" %></p>
    <% end %>
  </div>
</div>

