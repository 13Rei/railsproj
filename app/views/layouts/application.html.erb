<!DOCTYPE html>
<html>
  <head>
    <title>Railsproj</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'header', :media => "all"%>
    <%= stylesheet_link_tag 'footer', :media => "all"%>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
      <nav class="header">
          <div class="logo">
              STACK<b>UNDERFLOW</b>
          </div>
          <label for="button" class="favicon">
              <span class="fa fa-bars" aria-hidden="true"></span>
          </label>
          <input type="checkbox" id="button">
          <ul class="nav menu">
              <li class="home"><a href="../posts#show">HOME</a></li>
              <li class="about"><a href="#">ABOUT</a></li>
                <% if user_signed_in? %>
                <li class="profile">
                    <a href="../users/edit" class="menuButton" onClick="menu()">PROFILE</a>
                </li>
                <li class="logout">
                    <%= link_to "LOG OUT", destroy_user_session_path, method: 'delete' %> 
                </li>
                <% else %>
                    <li class="login"> <%= link_to "LOG IN", new_user_session_path %> </li>
                    <li class="register"> <%= link_to "REGISTER", new_user_registration_path %> </li>
                <% end %>
              <li>
                  <div class="stuff">
                      <input class="search" type="text" placeholder="Search....">
                      <i class="fab fa-twitter fa-2x"></i>
                      <input type="submit" hidden href="">
                  </div>
              </li>
          </ul>
      </nav>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <footer class="footer">
        <div class="footer_content">
            <div class="left">
                <h2 class="footer_logo">STACK<b>UNDERFLOW</b></h2>
                <div class="inner_foot_content left_foot">
                    <p class="item"><a href="../posts#show">Home</a></p>
                    <% if user_signed_in? %>
                        <p class="item"><a href="../users/edit">Profile</a></p>
                        <%= link_to "Sign Out", destroy_user_session_path, method: 'delete' %> 
                    <% else %>
                    <p class="item"><a href="../users/sing_in">Sign In</a></p>
                    <p class="item"><a href="../users/sign_up">Sign Up</a></p>
                    <% end %>
                </div>
            </div>
            <div class="right">
                <h2 class="footer_logo2">STACK<b>UNDERFLOW</b></h2>
                <div class="inner_foot_content right_foot">
                    <p class="item"><a href="">About Us</a></p>
                    <p class="item"><a href="">Questions</a></p>
                </div>
            </div>
        </div>
    </footer>
  </body>
</html>
