<%= form_for([@post,@post.comments.build]) do |f| %>
    <p>
        <%= f.hidden_field :name, value: current_user %>
    </p>
    <p>
        <%= f.label :body%><br>
        <%= f.text_area :body, :cols => 40, :rows => 10 %>
    </p>
    <br>
    <p>
        <%= f.submit 'Submit', :class => 'submit' %>
    </p>
<% end %>